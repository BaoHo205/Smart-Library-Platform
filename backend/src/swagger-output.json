{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "Smart Library Platform API",
    "description": "API documentation for the Smart Library Platform"
  },
  "host": "localhost:3000",
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local server"
    }
  ],
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication-related endpoints"
    },
    {
      "name": "Books",
      "description": "Book-related endpoints"
    },
    {
      "name": "Users",
      "description": "User-related endpoints"
    },
    {
      "name": "Staff",
      "description": "Staff-related endpoints"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/user/reviews/add": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Add book review",
        "description": "Add a review for a book. Requires user or staff authentication.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/reviews/update/{reviewId}": {
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Update book review",
        "description": "Update an existing book review by review ID. Requires user or staff authentication.",
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Review ID to update"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/staff/most-borrowed-books": {
      "get": {
        "tags": [
          "Staff"
        ],
        "summary": "Get most borrowed books",
        "description": "Retrieve statistics of the most frequently borrowed books. Staff access required.",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "type": "string"
          },
          {
            "name": "endDate",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/staff/top-active-readers": {
      "get": {
        "tags": [
          "Staff"
        ],
        "summary": "Get top active readers",
        "description": "Retrieve statistics of the most active library users/readers. Staff access required.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/staff/low-availability": {
      "get": {
        "tags": [
          "Staff"
        ],
        "summary": "Get books with low availability",
        "description": "Retrieve books that have low availability/stock levels. Staff access required.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/": {
      "get": {
        "tags": [
          "Books"
        ],
        "summary": "Get books",
        "description": "Search and retrieve books based on query parameters such as title, author, and genre.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "string"
          },
          {
            "name": "pageSize",
            "in": "query",
            "type": "string"
          },
          {
            "name": "sort",
            "in": "query",
            "type": "string"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string"
          },
          {
            "name": "q",
            "in": "query",
            "type": "string"
          },
          {
            "name": "title",
            "in": "query",
            "type": "string"
          },
          {
            "name": "author",
            "in": "query",
            "type": "string"
          },
          {
            "name": "genre",
            "in": "query",
            "type": "string"
          },
          {
            "name": "publisher",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/borrow/{bookId}": {
      "post": {
        "tags": [
          "Books"
        ],
        "summary": "Borrow a book",
        "description": "Borrow a specific book by its ID. Requires user authentication.",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID to borrow"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "dueDate": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/return/{bookId}": {
      "put": {
        "tags": [
          "Books"
        ],
        "summary": "Return a book",
        "description": "Return a borrowed book by its ID. Requires user authentication.",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Book ID to return"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/genres/": {
      "get": {
        "tags": [
          "Genres"
        ],
        "summary": "Get all genres",
        "description": "Retrieve a list of all book genres.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register new user",
        "description": "Create a new user account with email and password",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User login",
        "description": "Authenticate user and return access and refresh tokens",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/refresh": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Refresh access token",
        "description": "Generate a new access token using refresh token",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "User logout",
        "description": "Logout user and invalidate tokens",
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}